# Block hidden files like .env, .git, etc.
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Front controller routing (optional if you need it)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.php [L]
</IfModule>
